    toolTip.Position = UDim2.new(mainToolButton.Position.X.Scale, mainToolButton.Position.X.Offset + 70, 
                                 mainToolButton.Position.Y.Scale, mainToolButton.Position.Y.Offset)
    toolTip.Visible = true
end)

mainToolButton.MouseLeave:Connect(function()
    toolTip.Visible = false
end)

-- Initial animation when script loads
task.spawn(function()
    wait(1)
    local initialPulse = TweenService:Create(
        selectionRing,
        TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.Out),
        {BackgroundTransparency = 0.7}
    )
    initialPulse:Play()
    
    wait(0.5)
    initialPulse = TweenService:Create(
        selectionRing,
        TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.In),
        {BackgroundTransparency = 1}
    )
    initialPulse:Play()
end)

print("VEX OP - TROLL SCRIPT GUI loaded!")
