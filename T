-- Main tool button interactions
local toolEnabled = false

mainToolButton.MouseEnter:Connect(function()
    if not toolEnabled then
        showBlueGlow()
        pulseHighlight()
    end
    toolStroke.Color = Color3.fromRGB(0, 170, 255)
end)

mainToolButton.MouseLeave:Connect(function()
    if not toolEnabled then
        hideBlueGlow()
        stopPulse()
    end
    toolStroke.Color = Color3.fromRGB(80, 80, 80)
end)

mainToolButton.MouseButton1Down:Connect(function()
    buttonBounce()
    toolStroke.Thickness = 1
end)

mainToolButton.MouseButton1Up:Connect(function()
    toolStroke.Thickness = 3
end)

mainToolButton.MouseButton1Click:Connect(function()
    toolEnabled = not toolEnabled
    
    if toolEnabled then
        -- Enable tool
        mainToolButton.ImageColor3 = Color3.fromRGB(255, 255, 255)
        toolStroke.Color = Color3.fromRGB(0, 170, 255)
        selectionRing.Visible = true
        statusIndicator.Visible = true
        statusIndicator.BackgroundColor3 = Color3.fromRGB(50, 255, 50)
        highlightEffect.Visible = false
        stopPulse()
        
        -- Show inventory with animation
        openInventoryAnimation()
        
        -- Play activate sound
        local sound = Instance.new("Sound")
        sound.SoundId = "rbxassetid://9115718252"
        sound.Volume = 0.5
        sound.Parent = mainToolButton
        sound:Play()
        
        print("VEX OP - TROLL SCRIPT equipped!")
    else
        -- Disable tool
        mainToolButton.ImageColor3 = Color3.fromRGB(255, 255, 255)
        toolStroke.Color = Color3.fromRGB(80, 80, 80)
        selectionRing.Visible = false
        statusIndicator.Visible = false
        
        -- Close inventory with animation
        closeInventoryAnimation()
        
        -- Play deactivate sound
        local sound = Instance.new("Sound")
        sound.SoundId = "rbxassetid://9115716809"
        sound.Volume = 0.5
        sound.Parent = mainToolButton
        sound:Play()
        
        print("VEX OP - TROLL SCRIPT unequipped!")
    end
end)

-- Keyboard shortcuts
UIS.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed then
        if input.KeyCode == Enum.KeyCode.Q then
            -- Quick equip/unequip
            mainToolButton.MouseButton1Click:Fire()
        elseif input.KeyCode == Enum.KeyCode.E then
            -- Open/close inventory with animation
            if toolInventory.Visible then
                closeInventoryAnimation()
            else
                openInventoryAnimation()
            end
        end
    end
end)

-- NUCLEAR OPTION - Delete all other dragging code and use this
local offset = Vector2.new(0, 0)
local isDragging = false
local wasHovering = false

UIS.InputBegan:Connect(function(input, gameProcessed)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or 
       input.UserInputType == Enum.UserInputType.Touch then
        local mousePos = input.Position
        local buttonPos = mainToolButton.AbsolutePosition
        local buttonSize = mainToolButton.AbsoluteSize
        
        -- Check if click/touch is inside the button
        if mousePos.X >= buttonPos.X and mousePos.X <= buttonPos.X + buttonSize.X and
           mousePos.Y >= buttonPos.Y and mousePos.Y <= buttonPos.Y + buttonSize.Y then
            isDragging = true
            offset = buttonPos - mousePos
            
            -- STOP ALL ANIMATIONS WHILE DRAGGING
            wasHovering = highlightEffect.Visible
            hideBlueGlow()
            stopPulse()
            toolStroke.Color = Color3.fromRGB(0, 170, 255) -- Keep blue while dragging
            
            -- Visual feedback for dragging
            toolStroke.Thickness = 1
            mainToolButton.Size = UDim2.new(0, 56, 0, 56)
        end
    end
end)

UIS.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or 
       input.UserInputType == Enum.UserInputType.Touch then
        
        if isDragging then
            -- Restore visual when dragging ends
            toolStroke.Thickness = 3
            mainToolButton.Size = UDim2.new(0, 60, 0, 60)
            
            -- Check if we should restore hover effects
            local mousePos = UIS:GetMouseLocation()
            local buttonPos = mainToolButton.AbsolutePosition
            local buttonSize = mainToolButton.AbsoluteSize
            
            -- If mouse is still over button after drag, restore hover
            if mousePos.X >= buttonPos.X and mousePos.X <= buttonPos.X + buttonSize.X and
               mousePos.Y >= buttonPos.Y and mousePos.Y <= buttonPos.Y + buttonSize.Y then
                if not toolEnabled then
                    showBlueGlow()
                    pulseHighlight()
                end
            end
        end
        
        isDragging = false
    end
end)

UIS.InputChanged:Connect(function(input)
    if isDragging and (input.UserInputType == Enum.UserInputType.MouseMovement or 
                      input.UserInputType == Enum.UserInputType.TouchMovement) then
        local newPos = input.Position + offset
        mainToolButton.Position = UDim2.new(0, newPos.X, 0, newPos.Y)
    end
end)

-- Stop hover effects when dragging starts
mainToolButton.MouseEnter:Connect(function()
    if isDragging then return end -- Skip hover effects while dragging
    
    if not toolEnabled then
        showBlueGlow()
        pulseHighlight()
    end
    toolStroke.Color = Color3.fromRGB(0, 170, 255)
end)

mainToolButton.MouseLeave:Connect(function()
    if isDragging then return end -- Skip hover effects while dragging
    
    if not toolEnabled then
        hideBlueGlow()
        stopPulse()
    end
    toolStroke.Color = Color3.fromRGB(80, 80, 80)
end)

