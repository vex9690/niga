-- Animation variables
local animationSpeed = 0.3
local isAnimating = false

-- Animation functions
local function openInventoryAnimation()
    if isAnimating then return end
    isAnimating = true
    
    toolInventory.Visible = true
    toolInventory.Position = UDim2.new(0.02, 0, 0.5, -200)
    toolInventory.Size = UDim2.new(0, 0, 0, 0)
    toolInventory.BackgroundTransparency = 1
    
    -- Scale up animation
    local scaleUp = TweenService:Create(
        toolInventory,
        TweenInfo.new(animationSpeed, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
        {
            Size = UDim2.new(0, 220, 0, 320),
            BackgroundTransparency = 0
        }
    )
    
    -- Slide to final position
    local slideIn = TweenService:Create(
        toolInventory,
        TweenInfo.new(animationSpeed, Enum.EasingStyle.Quint, Enum.EasingDirection.Out),
        {
            Position = UDim2.new(0.02, 0, 0.5, -160)
        }
    )
    
    scaleUp:Play()
    scaleUp.Completed:Wait()
    slideIn:Play()
    slideIn.Completed:Connect(function()
        isAnimating = false
    end)
end

local function closeInventoryAnimation()
    if isAnimating then return end
    isAnimating = true
    
    -- Scale down animation
    local scaleDown = TweenService:Create(
        toolInventory,
        TweenInfo.new(animationSpeed * 0.7, Enum.EasingStyle.Back, Enum.EasingDirection.In),
        {
            Size = UDim2.new(0, 0, 0, 0),
            BackgroundTransparency = 1
        }
    )
    
    -- Slide out
    local slideOut = TweenService:Create(
        toolInventory,
        TweenInfo.new(animationSpeed * 0.7, Enum.EasingStyle.Quint, Enum.EasingDirection.In),
        {
            Position = UDim2.new(0.02, 0, 0.5, -200)
        }
    )
    
    slideOut:Play()
    slideOut.Completed:Wait()
    scaleDown:Play()
    scaleDown.Completed:Connect(function()
        toolInventory.Visible = false
        isAnimating = false
    end)
end

-- Functions for tool animations
local function pulseHighlight()
    if not mainToolButton:FindFirstChild("PulseTween") then
        local pulseTween = TweenService:Create(
            selectionRing,
            TweenInfo.new(0.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true),
            {BackgroundTransparency = selectionRing.BackgroundTransparency == 1 and 0.7 or 1}
        )
        pulseTween.Parent = mainToolButton
        pulseTween.Name = "PulseTween"
        pulseTween:Play()
    end
end

local function stopPulse()
    local pulseTween = mainToolButton:FindFirstChild("PulseTween")
    if pulseTween then
        pulseTween:Cancel()
        pulseTween:Destroy()
        selectionRing.BackgroundTransparency = 1
    end
end

local function showBlueGlow()
    highlightEffect.Visible = true
    local glowIn = TweenService:Create(
        highlightEffect,
        TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        {BackgroundTransparency = 0.7}
    )
    glowIn:Play()
end

local function hideBlueGlow()
    local glowOut = TweenService:Create(
        highlightEffect,
        TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        {BackgroundTransparency = 0.9}
    )
    glowOut:Play()
    glowOut.Completed:Connect(function()
        highlightEffect.Visible = false
    end)
end

local function buttonBounce()
    local bounce = TweenService:Create(
        mainToolButton,
        TweenInfo.new(0.1, Enum.EasingStyle.Back, Enum.EasingDirection.Out, 0, false, 0),
        {Size = UDim2.new(0, 56, 0, 56)}
    )
    bounce:Play()
    
    bounce.Completed:Connect(function()
        local bounceBack = TweenService:Create(
            mainToolButton,
            TweenInfo.new(0.1, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
            {Size = UDim2.new(0, 60, 0, 60)}
        )
        bounceBack:Play()
    end)
end

